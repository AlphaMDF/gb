<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ARMainActivity"
        tools:layout_editor_absoluteY="25dp"
        >

    <TextView android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/black_ops_one"
            android:text="Andromeda Rising"
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="48sp"
            app:layout_constraintBottom_toTopOf="@+id/text_messageBox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    <TextView android:id="@+id/text_messageBox"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/border_message"
            android:fontFamily="@font/roboto_medium"
            android:gravity="bottom"
            android:maxLines="999"
            android:padding="8dp"
            android:scrollbarStyle="insideOverlay"
            android:scrollbars="vertical"
            android:text="Welcome to Andromeda Rising,\na game of galactic Domination."
            android:textColor="@android:color/holo_orange_light"
            app:layout_constraintBottom_toTopOf="@+id/text_main_menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            />
    <TextView android:id="@+id/text_main_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/black_ops_one"
            android:text="Main Menu"
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_messageBox"
            />

    <LinearLayout android:id="@+id/layout_play"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/layout_levels"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_main_menu"
            >
        <Space android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
        <Button android:id="@+id/button_player1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_message"
                android:fontFamily="@font/black_ops_one"
                android:text="Player 1"
                android:textColor="@android:color/holo_orange_light"
                />
        <Space android:id="@+id/space_player2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
        <Button android:id="@+id/button_player2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_message"
                android:fontFamily="@font/black_ops_one"
                android:text="Player 2"
                android:textColor="@android:color/holo_orange_light"
                />
        <Space android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
    </LinearLayout>
    <LinearLayout android:id="@+id/layout_levels"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/layout_do"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_play"
            >
        <Space android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
        <Button android:id="@+id/button_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:background="@drawable/border_message"
                android:fontFamily="@font/black_ops_one"
                android:text="Save"
                android:textColor="@android:color/holo_orange_light"
                />
        <Space android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
        <Button android:id="@+id/button_load"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_message"
                android:fontFamily="@font/black_ops_one"
                android:text="Load"
                android:textColor="@android:color/holo_orange_light"
                />
        <Space android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
        <Button android:id="@+id/button_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_message"
                android:fontFamily="@font/black_ops_one"
                android:text="Stats"
                android:textColor="@android:color/holo_orange_light"
                />
        <Space android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
    </LinearLayout>
    <LinearLayout android:id="@+id/layout_do"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_levels"
            tools:padding="0dp"
            >
        <Space android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
        <Button android:id="@+id/button_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_message"
                android:fontFamily="@font/black_ops_one"
                android:text="Help"
                android:textColor="@android:color/holo_orange_light"
                />
        <Space android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
        <Button android:id="@+id/button_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_message"
                android:fontFamily="@font/black_ops_one"
                android:text="Options"
                android:textColor="@android:color/holo_orange_light"
                />
        <Space android:id="@+id/space_continuous"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:visibility="gone"
                tools:visibility="visible"
                />
        <Button android:id="@+id/button_continuous"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:fontFamily="@font/black_ops_one"
                android:text="Cont"
                android:textColor="@android:color/holo_orange_light"
                android:visibility="gone"
                tools:visibility="visible"
                />
        <Space android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
        <Button android:id="@+id/button_do"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_message"
                android:fontFamily="@font/black_ops_one"
                android:text="@string/button_Do"
                android:textColor="@android:color/holo_orange_light"
                />
        <Space android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
    </LinearLayout>

    <TextView android:id="@+id/text_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="Version"
            android:textColor="@android:color/holo_green_light"
            android:textSize="8sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

</android.support.constraint.ConstraintLayout>