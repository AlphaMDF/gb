<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".ARMainActivity"
                                             tools:layout_editor_absoluteY="25dp"
        >

    <!--<ImageView-->
    <!--android:src="@android:color/background_dark"-->
    <!--android:layout_width="0dp"-->
    <!--android:layout_height="0dp" android:id="@+id/ImageViewBackground" android:alpha="0.5"-->
    <!--app:layout_constraintTop_toTopOf="@+id/messageBox"-->
    <!--app:layout_constraintBottom_toBottomOf="@+id/messageBox"-->
    <!--app:layout_constraintEnd_toEndOf="@+id/messageBox" app:layout_constraintStart_toStartOf="@+id/messageBox"/>-->

    <TextView android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/black_ops_one"
            android:text="Andromeda Rising"
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="48sp"
            app:layout_constraintBottom_toTopOf="@+id/messageBox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    <TextView android:id="@+id/messageBox"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/border_message"
            android:fontFamily="@font/roboto_medium"
            android:gravity="bottom"
            android:maxLines="999"
            android:padding="8dp"
            android:scrollbarStyle="insideOverlay"
            android:scrollbars="vertical"
            android:text="Welcome to Andromeda Rising!"
            android:textColor="@android:color/holo_orange_light"
            app:layout_constraintBottom_toTopOf="@+id/mainmenu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            />
    <TextView android:id="@+id/mainmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/black_ops_one"
            android:text=" Main Menu "
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/messageBox"
            />

    <LinearLayout android:orientation="horizontal"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:id="@+id/Play"
                  android:layout_marginEnd="8dp"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="8dp"
                  android:layout_marginBottom="8dp"
                  app:layout_constraintBottom_toTopOf="@+id/Levels"
                  android:layout_marginTop="8dp"
                  app:layout_constraintTop_toBottomOf="@+id/mainmenu"
                  android:gravity="center"
            >
        <Space android:layout_width="0dp"
               android:layout_height="1dp"
               android:layout_weight="1"
                />
        <Button android:id="@+id/Play1Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_message"
                android:fontFamily="@font/black_ops_one"
                android:text=" Player 1"
                android:textColor="@android:color/holo_orange_light"
                />
        <Space android:id="@+id/Play2Space"
               android:layout_width="0dp"
               android:layout_height="1dp"
               android:layout_weight="1"
                />
        <Button android:id="@+id/Play2Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_message"
                android:fontFamily="@font/black_ops_one"
                android:text=" Player 2 "
                android:textColor="@android:color/holo_orange_light"
                />
        <Space android:layout_width="0dp"
               android:layout_height="1dp"
               android:layout_weight="1"
                />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:id="@+id/Levels"
                  android:layout_marginBottom="8dp"
                  app:layout_constraintBottom_toTopOf="@+id/DoArea"
                  android:gravity="center"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="8dp"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="8dp"
                  app:layout_constraintTop_toBottomOf="@+id/Play"
            >
        <Space android:layout_width="0dp"
               android:layout_height="1dp"
               android:layout_weight="1"
                />
        <Button android:id="@+id/SaveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_message"
                android:fontFamily="@font/black_ops_one"
                android:text="Save"
                android:textColor="@android:color/holo_orange_light"
                />
        <Space android:layout_width="0dp"
               android:layout_height="1dp"
               android:layout_weight="1"
                />
        <Button android:id="@+id/LoadButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_message"
                android:fontFamily="@font/black_ops_one"
                android:text="Load"
                android:textColor="@android:color/holo_orange_light"
                />
        <Space android:layout_width="0dp"
               android:layout_height="1dp"
               android:layout_weight="1"
                />
        <Button android:id="@+id/StatsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_message"
                android:fontFamily="@font/black_ops_one"
                android:text="Stats"
                android:textColor="@android:color/holo_orange_light"
                />
        <Space android:layout_width="0dp"
               android:layout_height="1dp"
               android:layout_weight="1"
                />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:id="@+id/DoArea"
                  android:layout_marginEnd="8dp"
                  app:layout_constraintEnd_toEndOf="parent"
                  tools:padding="0dp"
                  android:layout_marginBottom="8dp"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/Levels"
                  android:layout_marginTop="8dp"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="8dp"
            >
        <Space android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
        <Button android:id="@+id/HelpButtonMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_message"
                android:fontFamily="@font/black_ops_one"
                android:text="Help"
                android:textColor="@android:color/holo_orange_light"
                />
        <Space android:layout_width="0dp"
               android:layout_height="1dp"
               android:layout_weight="1"
                />
        <Button android:id="@+id/OptionsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_message"
                android:fontFamily="@font/black_ops_one"
                android:text="Options"
                android:textColor="@android:color/holo_orange_light"
                />
        <Space android:id="@+id/ContinuousSpace"
               android:layout_width="0dp"
               android:layout_height="1dp"
               android:layout_weight="1"
               android:visibility="gone"
               tools:visibility="visible"
                />
        <Button android:id="@+id/ContinuousButton"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:fontFamily="@font/black_ops_one"
                android:text="Cont"
                android:textColor="@android:color/holo_orange_light"
                android:visibility="gone"
                tools:visibility="visible"
                />
        <Space android:layout_width="0dp"
               android:layout_height="1dp"
               android:layout_weight="1"
                />
        <Button android:id="@+id/DoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_message"
                android:fontFamily="@font/black_ops_one"
                android:text="@string/button_Do"
                android:textColor="@android:color/holo_orange_light"
                />
        <Space android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
    </LinearLayout>

    <TextView android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="Version"
            android:textColor="@android:color/holo_green_light"
            android:textSize="8sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

</android.support.constraint.ConstraintLayout>