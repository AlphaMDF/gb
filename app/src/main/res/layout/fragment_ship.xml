<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:background="@drawable/border_message"
                                             android:layout_height="match_parent"
        >

    <ImageView android:layout_width="50dp"
               android:layout_height="50dp"
               android:id="@+id/image_ship"
               app:srcCompat="@drawable/podt"
               android:layout_marginEnd="8dp"
               android:layout_marginTop="8dp"
               app:layout_constraintTop_toTopOf="@+id/text_ship_stats"
               app:layout_constraintEnd_toEndOf="@+id/text_ship_stats"
            />
    <ImageView android:layout_width="50dp"
               android:layout_height="50dp"
               android:id="@+id/image_ship_race"
               app:srcCompat="@drawable/race_impi"
               app:layout_constraintEnd_toStartOf="@+id/image_ship"
               android:layout_marginEnd="8dp"
               android:layout_marginTop="8dp"
               app:layout_constraintTop_toTopOf="@+id/text_ship_stats"
            />
    <TextView android:id="@+id/text_ship_stats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/roboto_medium"
            android:padding="8dp"
            android:text=""
            android:textColor="@android:color/holo_orange_light"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Ship Details"
            />
    <Button android:id="@+id/button_to_ship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/border_message"
            android:fontFamily="@font/black_ops_one"
            android:minWidth="0dp"
            android:onClick="panzoomToShip"
            android:text="  +  "
            android:textColor="@android:color/holo_orange_light"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_ship_stats"
            tools:visibility="visible"
            />
    <Button android:id="@+id/button_destinations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/border_message"
            android:fontFamily="@font/black_ops_one"
            android:minWidth="0dp"
            android:text="Destination"
            android:textColor="@android:color/holo_orange_light"
            app:layout_constraintStart_toEndOf="@+id/button_to_ship"
            app:layout_constraintTop_toBottomOf="@+id/text_ship_stats"
            />
    <HorizontalScrollView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/button_destinations"
            app:layout_constraintTop_toBottomOf="@+id/text_ship_stats"
            >
        <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >
            <Space android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />
            <Button android:id="@+id/button_pod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border_message"
                    android:fontFamily="@font/black_ops_one"
                    android:text="Pod (10)"
                    android:textColor="@android:color/holo_orange_light"
                    android:visibility="gone"
                    tools:visibility="visible"
                    />
            <Space android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />
            <Button android:id="@+id/button_shuttle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border_message"
                    android:fontFamily="@font/black_ops_one"
                    android:text="Shuttle (20)"
                    android:textColor="@android:color/holo_orange_light"
                    android:visibility="gone"
                    tools:visibility="visible"
                    />
            <Space android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />
            <Button android:id="@+id/button_cruiser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border_message"
                    android:fontFamily="@font/black_ops_one"
                    android:text="Cruiser (50)"
                    android:textColor="@android:color/holo_orange_light"
                    android:visibility="gone"
                    tools:visibility="visible"
                    />
            <Space android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />
            <Button android:id="@+id/button_station"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border_message"
                    android:fontFamily="@font/black_ops_one"
                    android:text="Station (500)"
                    android:textColor="@android:color/holo_orange_light"
                    android:visibility="gone"
                    tools:visibility="visible"
                    />
            <Space android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />
            <Button android:id="@+id/button_battlestar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border_message"
                    android:fontFamily="@font/black_ops_one"
                    android:text="Battle Star (1000)"
                    android:textColor="@android:color/holo_orange_light"
                    android:visibility="gone"
                    tools:visibility="visible"
                    />
            <Space android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />
            <Button android:id="@+id/button_research"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border_message"
                    android:fontFamily="@font/black_ops_one"
                    android:text="Research Center (2000)"
                    android:textColor="@android:color/holo_orange_light"
                    android:visibility="gone"
                    tools:visibility="visible"
                    />
            <Space android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />
        </LinearLayout>
    </HorizontalScrollView>

</android.support.constraint.ConstraintLayout>