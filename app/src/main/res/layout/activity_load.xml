<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".ARMainActivity"
                                             tools:layout_editor_absoluteY="25dp"
        >
    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:background="@drawable/border_message"
                  android:layout_margin="8dp"
                  android:padding="8dp"
                  android:id="@+id/linearLayout4"
                  app:layout_constraintBottom_toTopOf="@+id/button_cancel"
                  android:layout_marginBottom="8dp"
                  android:layout_marginTop="8dp"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="8dp"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="8dp"
            >

        <TextView android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/black_ops_one"
                android:padding="8dp"
                android:text="Load Games"
                android:textAlignment="center"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="24sp"
                />
        <Space android:layout_width="1dp"
               android:layout_height="0dp"
               android:layout_weight="1"
                />

        <TextView android:id="@+id/text_single_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/black_ops_one"
                android:padding="8dp"
                android:text="Single Player"
                android:textAlignment="center"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="18sp"
                />
        <LinearLayout android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="8dp"

                >
            <Space android:layout_width="0dp"
                   android:layout_height="1dp"
                   android:layout_weight="1"
                    />

            <Button android:id="@+id/button_1_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_message"
                    android:fontFamily="@font/black_ops_one"
                    android:minWidth="80dp"
                    android:text="Mission 1"
                    android:textColor="@android:color/holo_orange_light"
                    android:textSize="12sp"
                    />
            <Space android:layout_width="0dp"
                   android:layout_height="1dp"
                   android:layout_weight="1"
                    />
            <Button android:id="@+id/button_1_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_message"
                    android:fontFamily="@font/black_ops_one"
                    android:minWidth="80dp"
                    android:text="Mission 2"
                    android:textColor="@android:color/holo_orange_light"
                    android:textSize="12sp"
                    />
            <Space android:layout_width="0dp"
                   android:layout_height="1dp"
                   android:layout_weight="1"
                    />
            <Button android:id="@+id/button_1_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_message"
                    android:fontFamily="@font/black_ops_one"
                    android:minWidth="80dp"
                    android:text="Mission 3"
                    android:textColor="@android:color/holo_orange_light"
                    android:textSize="12sp"
                    />
            <Space android:layout_width="0dp"
                   android:layout_height="1dp"
                   android:layout_weight="1"
                    />
        </LinearLayout>
        <LinearLayout android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="8dp"

                >
            <Space android:layout_width="0dp"
                   android:layout_height="1dp"
                   android:layout_weight="1"
                    />

            <Button android:id="@+id/button_1_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_message"
                    android:fontFamily="@font/black_ops_one"
                    android:minWidth="80dp"
                    android:text="Mission 4"
                    android:textColor="@android:color/holo_orange_light"
                    android:textSize="12sp"
                    />
            <Space android:layout_width="0dp"
                   android:layout_height="1dp"
                   android:layout_weight="1"
                    />
            <Button android:id="@+id/button_1_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_message"
                    android:fontFamily="@font/black_ops_one"
                    android:minWidth="80dp"
                    android:text="Mission 5"
                    android:textColor="@android:color/holo_orange_light"
                    android:textSize="12sp"
                    />
            <Space android:layout_width="0dp"
                   android:layout_height="1dp"
                   android:layout_weight="1"
                    />
            <Button android:id="@+id/button_1_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_message"
                    android:fontFamily="@font/black_ops_one"
                    android:minWidth="80dp"
                    android:text="Mission 6"
                    android:textColor="@android:color/holo_orange_light"
                    android:textSize="12sp"
                    />
            <Space android:layout_width="0dp"
                   android:layout_height="1dp"
                   android:layout_weight="1"
                    />
        </LinearLayout>
        <LinearLayout android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="8dp"

                >
            <Space android:layout_width="0dp"
                   android:layout_height="1dp"
                   android:layout_weight="1"
                    />
            <Button android:id="@+id/button_1_random"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_message"
                    android:fontFamily="@font/black_ops_one"
                    android:minWidth="80dp"
                    android:text="New Random Mission"
                    android:textColor="@android:color/holo_orange_light"
                    android:textSize="12sp"
                    />
            <Space android:layout_width="0dp"
                   android:layout_height="1dp"
                   android:layout_weight="1"
                    />
            <Button android:id="@+id/button_1_demo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_message"
                    android:fontFamily="@font/black_ops_one"
                    android:minWidth="80dp"
                    android:text="Demo"
                    android:textColor="@android:color/holo_orange_light"
                    android:textSize="12sp"
                    />
            <Space android:layout_width="0dp"
                   android:layout_height="1dp"
                   android:layout_weight="1"
                    />
        </LinearLayout>
        <Space android:layout_width="1dp"
               android:layout_height="0dp"
               android:layout_weight="1"
                />
        <TextView android:id="@+id/text_two_players"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/black_ops_one"
                android:padding="8dp"
                android:text="Two Players Pass and Play"
                android:textAlignment="center"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="18sp"
                />
        <LinearLayout android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="8dp"

                >
            <Space android:layout_width="0dp"
                   android:layout_height="1dp"
                   android:layout_weight="1"
                    />
            <Button android:id="@+id/button_2_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_message"
                    android:fontFamily="@font/black_ops_one"
                    android:minWidth="80dp"
                    android:text="Map 1"
                    android:textColor="@android:color/holo_orange_light"
                    android:textSize="12sp"
                    />
            <Space android:layout_width="0dp"
                   android:layout_height="1dp"
                   android:layout_weight="1"
                    />
            <Button android:id="@+id/button_2_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_message"
                    android:fontFamily="@font/black_ops_one"
                    android:minWidth="80dp"
                    android:text="Map 2"
                    android:textColor="@android:color/holo_orange_light"
                    android:textSize="12sp"
                    />
            <Space android:layout_width="0dp"
                   android:layout_height="1dp"
                   android:layout_weight="1"
                    />
            <Button android:id="@+id/button_2_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_message"
                    android:fontFamily="@font/black_ops_one"
                    android:minWidth="80dp"
                    android:text="Map 3"
                    android:textColor="@android:color/holo_orange_light"
                    android:textSize="12sp"
                    />
            <Space android:layout_width="0dp"
                   android:layout_height="1dp"
                   android:layout_weight="1"
                    />

        </LinearLayout>
        <LinearLayout android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="8dp"

                >
            <Space android:layout_width="0dp"
                   android:layout_height="1dp"
                   android:layout_weight="1"
                    />
            <Button android:id="@+id/button_2_random"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_message"
                    android:fontFamily="@font/black_ops_one"
                    android:minWidth="80dp"
                    android:text="New Random Map"
                    android:textColor="@android:color/holo_orange_light"
                    android:textSize="12sp"
                    />
            <Space android:layout_width="0dp"
                   android:layout_height="1dp"
                   android:layout_weight="1"
                    />
        </LinearLayout>
        <Space android:layout_width="1dp"
               android:layout_height="0dp"
               android:layout_weight="1"
                />

    </LinearLayout>

    <Button android:id="@+id/button_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/border_message"
            android:fontFamily="@font/black_ops_one"
            android:text="Help"
            android:textColor="@android:color/holo_orange_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_cancel"
            />
    <Button android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/border_message"
            android:fontFamily="@font/black_ops_one"
            android:text="Cancel"
            android:textColor="@android:color/holo_orange_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_done"
            app:layout_constraintStart_toEndOf="@+id/button_help"
            />

    <Button android:id="@+id/button_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/border_message"
            android:fontFamily="@font/black_ops_one"
            android:text="Load"
            android:textColor="@android:color/holo_orange_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_cancel"
            />

    <TextView android:id="@+id/text_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="Version"
            android:textColor="@android:color/holo_green_light"
            android:textSize="8sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
</android.support.constraint.ConstraintLayout>